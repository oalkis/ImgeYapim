@model ImgeYapim.Models.Slider

@{
    ViewBag.Title = "EditSlider";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>EditSlider</h2>

@using (Html.BeginForm("EditSlider", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Slider</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.SliderID)

    <div class="form-group">
        @Html.LabelFor(model => model.SliderName, "İsim", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SliderName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SliderName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SliderOrder, "Sıra", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SliderOrder, new { htmlAttributes = new { type = "number", min = "1", max = "20", @class = "form-control" } })

            @Html.ValidationMessageFor(model => model.SliderOrder, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Eski Resim", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <img width="75" src="@Model.SliderPicture" />
            @Html.ValidationMessageFor(model => model.SliderPicture, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SliderPicture, "Yeni Resim", htmlAttributes: new { @id = "picture", @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="picture" id="picture" accept=".jpg,.png,.gif,.JPG,.PNG,.GIF,.JPEG" class="form-control" />
            @Html.ValidationMessageFor(model => model.SliderPicture, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-secondary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Geri Dön", "Slider")
</div>
