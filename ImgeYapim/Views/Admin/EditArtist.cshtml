@model ImgeYapim.Models.Artist

@{
    ViewBag.Title = "EditArtist";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>EditArtist</h2>

@using (Html.BeginForm("EditArtist", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Artist</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ArtistID)

    <div class="form-group">
        @Html.LabelFor(model => model.ArtistName, "Grup Adı", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ArtistName, new { htmlAttributes = new { @class = "form-control" }, value = "@item.ArtistName" })
            @Html.ValidationMessageFor(model => model.ArtistName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Eski Resim", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <img width="75" src="@Model.ArtistPicture" />
            @Html.ValidationMessageFor(model => model.ArtistPicture, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ArtistPicture, "Yeni Resim", htmlAttributes: new { @id = "picture", @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="picture" id="picture" accept=".jpg,.png,.gif,.JPG,.PNG,.GIF,.JPEG" class="form-control" />
            @Html.ValidationMessageFor(model => model.ArtistPicture, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ArtistOrder, "Sıra", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ArtistOrder, new { htmlAttributes = new { type = "number", min = "1", max ="20", @class = "form-control" } })

            @Html.ValidationMessageFor(model => model.ArtistOrder, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ArtistAbout, "Grup Bilgileri", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.ArtistAbout, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ArtistAbout, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-default" />
        </div>
    </div>
</div>
}

<script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
<script src="~/Scripts/tinymce/tinymce.js"></script>
