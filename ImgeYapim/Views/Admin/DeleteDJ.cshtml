@model ImgeYapim.Models.DJ

@{
    ViewBag.Title = "DeleteDJ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h3>Bu Dj'i silmek istediğinize emin misiniz?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Dj Adı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DJName)
        </dd>

        <dt>
            Dj Resmi
        </dt>

        <dd>
                
                    <img width="150" src="@Model.DJPicture" />
                    @Html.ValidationMessageFor(model => model.DJPicture, "", new { @class = "text-danger" })
        </dd>

        <dt>
Grup Bilgileri        </dt>

        <dd>
            @Html.DisplayFor(model => model.DJAbout)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-danger" /> |
        </div>
    }
</div>
